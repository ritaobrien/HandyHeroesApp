<div class="container-fluid background-cover">
<div class="container">
<% content_for :title, "Task Details" %>

<h1 class="my-3">Task Details</h1>

<div class="table-responsive mb-4">
  <table class="table table-bordered table-hover">
    <thead class="thead-light">
      <tr>
        <th>Field</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th>Task Type:</th>
        <td><%= @task.task_type %></td>
      </tr>
      <tr>
        <th>Task Category:</th>
        <td><%= @task.task_category %></td>
      </tr>
      <tr>
        <th>Description:</th>
        <td><%= @task.description.present? ? @task.description : "No description provided" %></td>
      </tr>
      <tr>
        <th>Status:</th>
        <td><%= @task.status %></td>
      </tr>
      <tr>
        <th>Comments:</th>
        <td><%= @task.comment.present? ? @task.comment : "No comments provided" %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="mt-3">
  <% if current_user.senior? %>
    <%= link_to "Delete this Task", @task, method: :delete, data: { confirm: "Are you sure you want to delete this task?" }, class: "btn btn-danger btn-sm" %>
    <%= link_to "Back to My Tasks", tasks_path, class: "btn btn-secondary btn-sm" %>
  <% else %>
    <%= link_to "Back to Available Tasks", tasks_path, class: "btn btn-secondary btn-sm" %>
  <% end %>
</div>
</div>
</div>