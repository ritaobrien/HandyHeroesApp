<% if resource.errors.any? %>

<br/>
  <div id="error_explanation" data-turbo-cache="false" class="error-box">
  <h2><u>Some of your entries are missing or invalid.<br/>Please correct the errors listed below and then resubmit the form.</u></h2>  
  <br/><h2>
      <%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h2>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


